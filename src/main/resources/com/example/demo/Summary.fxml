<AnchorPane prefHeight="600.0" prefWidth="979.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.Summary">
    <children>
        <Button layoutX="949.0" mnemonicParsing="false" onAction="#logOut">
            <graphic>
                <FontAwesomeIconView glyphName="CLOSE" size="1.5em" />
            </graphic>
        </Button>
      <VBox layoutX="335.0" layoutY="144.0" spacing="20.0">
         <children>
            <ComboBox fx:id="studentBox" prefHeight="40.0" prefWidth="315.0" promptText="Select a student" styleClass="h4" />
            <Label fx:id="studentName" prefHeight="34.0" prefWidth="315.0" text="Student Name:">
               <font>
                  <Font size="18.0" />
               </font></Label>
            <Label fx:id="studentID" prefHeight="34.0" prefWidth="315.0" text="Student ID:">
               <font>
                  <Font size="18.0" />
               </font></Label>
            <Label fx:id="grade" prefHeight="34.0" prefWidth="315.0" text="Grade:">
               <font>
                  <Font size="18.0" />
               </font></Label>
            <Label fx:id="gpa" prefHeight="34.0" prefWidth="315.0" text="GPA:">
               <font>
                  <Font size="18.0" />
               </font></Label>
            <Button mnemonicParsing="false" onAction="#generateSummary" prefHeight="36.0" prefWidth="315.0" text="Generate Summary">
               <styleClass>
                  <String fx:value="btn-primary" />
                  <String fx:value="h4" />
               </styleClass></Button>
         </children>
      </VBox>
    </children>
    <stylesheets>
        <URL value="@../../../CSS/application.css" />
        <URL value="@../../../CSS/bootstrap.css" />
    </stylesheets>
</AnchorPane>
